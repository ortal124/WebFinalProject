{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "lib": ["es2015"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.test.ts", "jest.config.ts"],
  "exclude": ["node_modules", "dist", "jest.config.ts", "./src/test"]
}